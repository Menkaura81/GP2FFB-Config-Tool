    <ImplicitUsings>enable</ImplicitUsings>
    <ApplicationIcon>logoICR2FFB.ico</ApplicationIcon>
  </PropertyGroup>

  <ItemGroup>
    <Content Include="logoICR2FFB.ico" />
  </ItemGroup>

  <ItemGroup>
